{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist",
    "module": "CommonJS",
    "noImplicitAny": true,
    "lib": [
      "ES2020",
      "ES7",
      "DOM"
    ],
    "outDir": "./dist",
    "target": "ES2020",
    "moduleResolution": "Node",
  },
  "typedocOptions": {
    "mode": "modules",
    "out": "docs"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
